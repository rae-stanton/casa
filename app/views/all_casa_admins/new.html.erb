<div class="col-md-6">
  <div class="title mb-30 mt-30">
    <h2>New All CASA Admin</h1>
  </div>
</div>

<div class="card card-container">
  <div class="card-body">
    <%= form_for @all_casa_admin, as: :all_casa_admin, url: all_casa_admins_path do |form| %>
      <%= render "/shared/error_messages", resource: @all_casa_admin %>

      <div class="input-style-1">
        <%= form.label :email, "Email" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Submit", class: "main-btn primary-btn btn-hover" %>
      </div>
    <% end %>
  </div>
</div>
